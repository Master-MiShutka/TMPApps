<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local_converters="clr-namespace:TMP.UI.Controls.WPF.Reporting.Converters"
    xmlns:matrixGrid="clr-namespace:TMP.UI.Controls.WPF.Reporting.MatrixGrid">

    <ResourceDictionary.MergedDictionaries />

    <DataTemplate DataType="{x:Type matrixGrid:MatrixEmptyHeaderItem}">
        <Border
            Padding="2"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="0,0,1,1" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixSummaryHeaderItem}">
        <Border
            Padding="2"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="{Binding Converter={x:Static local_converters:HeaderBorderThicknessConverter.Singleton}}">
            <ContentControl
                x:Name="summaryHeaderPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Header}"
                FontWeight="SemiBold"
                ToolTip="{Binding ToolTip}" />
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixColumnHeaderItem}">
        <Border
            Padding="2"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="{Binding Converter={x:Static local_converters:HeaderBorderThicknessConverter.Singleton}}">
            <ContentControl
                x:Name="columnHeaderPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Header}"
                Tag="{Binding Tag}" />
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixRowHeaderItem}">
        <Border
            Padding="2"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="{Binding Converter={x:Static local_converters:HeaderBorderThicknessConverter.Singleton}}">
            <ContentControl
                x:Name="rowHeaderPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Header}"
                Tag="{Binding Tag}" />
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixCellItem}">
        <Border
            Padding="1"
            BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
            BorderThickness="0,0,1,1">
            <ContentControl
                x:Name="dataPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Value}"
                ContentStringFormat="N0" />
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixSummaryItem}">
        <Border
            Padding="1"
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="0,0,1,1">
            <ContentControl
                x:Name="totalPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Value}"
                ContentStringFormat="N0"
                FontWeight="ExtraBold" />
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixSummaryColumnItem}">
        <Border
            Padding="1"
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="1,0,1,1">
            <ContentControl
                x:Name="totalPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Value}"
                ContentStringFormat="N0"
                FontWeight="Bold" />
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type matrixGrid:MatrixSummaryRowItem}">
        <Border
            Padding="1"
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
            BorderThickness="0,1,1,1">
            <ContentControl
                x:Name="totalPresenter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Value}"
                ContentStringFormat="N0"
                FontWeight="Bold" />
        </Border>
    </DataTemplate>

    <Style TargetType="{x:Type matrixGrid:MatrixGridControl}">
        <!--    -->
    </Style>

</ResourceDictionary>