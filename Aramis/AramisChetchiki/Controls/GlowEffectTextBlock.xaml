<UserControl x:Class="TMP.WORK.AramisChetchiki.Controls.GlowEffectTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMP.WORK.AramisChetchiki.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100">
    <Grid>
        <Grid.Resources>
            <DropShadowEffect x:Key="glowEffect"   BlurRadius="3" Opacity="1" ShadowDepth="0" Color="{Binding Path=GlowColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Grid.Resources>
        <Grid Effect="{StaticResource glowEffect}">
            <Grid Effect="{StaticResource glowEffect}">
                <TextBlock Text="{Binding Path=Text, FallbackValue='not defined', RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Effect="{StaticResource glowEffect}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
