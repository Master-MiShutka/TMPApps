<data_views:DataViewer
    x:Class="TMP.ARMTES.Controls.DataViews.ConfigurationApi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TMP.UI.Controls.WPF;assembly=ui.controls.wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data_views="clr-namespace:TMP.ARMTES.Controls.DataViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    mc:Ignorable="d">
    <data_views:DataViewer.Tools>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="Перечень систем" />
            <Separator />
            <controls:LabelledContent Label="Подразделение:">
                <ListBox Style="{StaticResource EnterprisesListBox}" />
            </controls:LabelledContent>
        </StackPanel>
    </data_views:DataViewer.Tools>
</data_views:DataViewer>
