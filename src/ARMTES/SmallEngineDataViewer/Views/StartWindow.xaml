<Window
    x:Class="TMP.ARMTES.Views.StartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TMP.ARMTES.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="АРМТЕС"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    TextOptions.TextFormattingMode="Display"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <StackPanel.Resources>
            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                <Setter Property="Padding" Value="10,2" />
                <Setter Property="Margin" Value="0,10" />
            </Style>
        </StackPanel.Resources>
        <Button Click="ShowSES" Content="Просмотр списка СДСП" />
        <Button Click="ShowSESIndications" Content="Опрос СДСП" />
        <Separator />
        <Button Click="ShowHES" Content="Просмотр списка АСКУЭ-быт" />
    </StackPanel>
</Window>
