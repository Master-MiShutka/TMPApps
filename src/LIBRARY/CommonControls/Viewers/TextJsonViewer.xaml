<UserControl x:Class="TMP.Wpf.CommonControls.Viewers.TextJsonViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMP.Wpf.CommonControls.Viewers"
             xmlns:converters="clr-namespace:TMP.Wpf.CommonControls.Converters"
             xmlns:iconpack="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:ics="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:FileSizeToHumanReadableConverter x:Key="FileSizeToHumanReadableConverter"/>
    </UserControl.Resources>
    <ics:TextEditor Grid.Row="0" x:Name="textbox" SyntaxHighlighting="JS" IsReadOnly="True" ShowLineNumbers="True"/>
</UserControl>
