<Window x:Class="TMP.Work.Emcos.DataForCalculateNormativ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMP.Work.Emcos.DataForCalculateNormativ"
        mc:Ignorable="d"
        FontFamily="Calibri,Verdana,Tahoma"
        UseLayoutRounding="True" WindowStartupLocation="CenterOwner"
        TextOptions.TextFormattingMode="Ideal"
        Title="Получение режимных данных из Emcos Corporate для расчёта норматива потерь в ПО DWRES и Poteri_35_750" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <DataTemplate x:Key="itemWithCheckBox" DataType="{x:Type local:ListPoint}">
                    <DockPanel>
                        <CheckBox IsChecked="{Binding Checked}" DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Padding="0"/>
                    </DockPanel>
                </DataTemplate>
            </Grid.Resources>
            <ListBox x:Name="departamentsList" Grid.Column="0" Margin="2 2 5 2" ItemTemplate="{StaticResource itemWithCheckBox}" SelectionChanged="departamentsList_SelectionChanged">
                <!-- -->
            </ListBox>
            <GridSplitter Grid.Column="0" Margin="0 2" HorizontalAlignment="Right" Width="3" ResizeBehavior="CurrentAndNext" ResizeDirection="Columns" Background="{x:Static SystemColors.HighlightBrush}" />
            <ListBox x:Name="substationsList" Grid.Column="1" Margin="2 2 5 2" ItemTemplate="{StaticResource itemWithCheckBox}" SelectionChanged="substationsList_SelectionChanged">
                <!-- -->
            </ListBox>
            <GridSplitter Grid.Column="1" Margin="0 2" HorizontalAlignment="Right" Width="3" ResizeBehavior="CurrentAndNext" ResizeDirection="Columns" Background="{x:Static SystemColors.HighlightBrush}" />
            <ListBox x:Name="voltagesList" Grid.Column="2" Margin="2" ItemTemplate="{StaticResource itemWithCheckBox}">
                <!-- -->
            </ListBox>
        </Grid>
        <!-- -->
        <DockPanel Grid.Row="2" LastChildFill="False">
            <Button DockPanel.Dock="Left" Margin="10 5" Padding="5 0" Content="Обновить" x:Name="btnUpdate" Click="btnUpdate_Click"/>
            <Button DockPanel.Dock="Right" Margin="10 5" Padding="5 0" Content="Получить" x:Name="btnGet" Click="btnGet_Click"/>
            <Button DockPanel.Dock="Right" Margin="10 5" Padding="5 0" Content="Сохранить" x:Name="btnSave" Click="btnSave_Click"/>
        </DockPanel>
    </Grid>
</Window>
