                                TargetElementType=local:HierarchicalGroupByItem}"
        BasedOn="{StaticResource tableViewLunaNormalColorHierarchicalGroupByItemStyle}"
        TargetType="local:HierarchicalGroupByItem" />

    <!--  Generic theme for TableflowView  -->

