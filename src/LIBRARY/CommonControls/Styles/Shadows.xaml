<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <DropShadowEffect
        x:Key="DropShadowBrush"
        po:Freeze="True"
        BlurRadius="6"
        Direction="330"
        Opacity="0.8"
        ShadowDepth="1" />
    <DropShadowEffect
        x:Key="dropShadow"
        BlurRadius="6"
        Direction="330"
        Opacity="0.8"
        ShadowDepth="1"
        Color="{DynamicResource BlackColor}" />
    <DropShadowEffect
        x:Key="dropShadowWhite"
        BlurRadius="6"
        Direction="330"
        Opacity="0.8"
        ShadowDepth="1"
        Color="{DynamicResource WhiteColor}" />
    <DropShadowEffect
        x:Key="dropShadowAccentBase"
        BlurRadius="6"
        Direction="330"
        Opacity="0.8"
        ShadowDepth="1"
        Color="{DynamicResource AccentBaseColor}" />
    <DropShadowEffect
        x:Key="dropShadowAccent"
        Direction="330"
        Opacity="0.8"
        ShadowDepth="1"
        Color="{DynamicResource AccentColor}" />
</ResourceDictionary>