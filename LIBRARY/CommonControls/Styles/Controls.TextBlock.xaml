<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  note: default style for textblock is now in TMPWindow !!!  -->
    <!--  never ever make a default style for TextBlock in App.xaml !!!  -->
    <Style x:Key="TMPTextBlock" TargetType="{x:Type TextBlock}">
        <!--  doesn't need this anymore...  -->
        <!--<Setter Property="Foreground"
                Value="{DynamicResource LabelTextBrush}" />-->
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
        <Setter Property="FontSize" Value="{DynamicResource ContentFontSize}" />
    </Style>
</ResourceDictionary>