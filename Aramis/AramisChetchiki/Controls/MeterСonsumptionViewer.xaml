<UserControl x:Class="TMP.WORK.AramisChetchiki.Controls.MeterСonsumptionViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:TMP.WORK.AramisChetchiki.Model"
             xmlns:local_controls="clr-namespace:TMP.WORK.AramisChetchiki.Controls"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             BorderThickness="1"
             BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="150" d:DesignWidth="800">
    <UserControl.Resources>

        <local_controls:ItemHeightValueConverter x:Key="ItemHeightValueConverter"/>

        <System:Double x:Key="minValueWidth">20</System:Double>

        <DataTemplate x:Key="ChangeItemDataTemplate" DataType="{x:Type model:MeterEvent}">
            <Grid MinWidth="{StaticResource minValueWidth}" Margin="1,2,1,0">
                <Border x:Name="border"
                        Margin="5,0,5,1"
                        VerticalAlignment="Bottom"
                        Background="Green"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1"
                        Effect="{StaticResource dropShadowAccent}">
                    <Border.Height>
                        <MultiBinding Converter="{StaticResource ItemHeightValueConverter}">
                            <Binding Path="Сonsumption" />
                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}" />
                        </MultiBinding>
                    </Border.Height>
                </Border>
                <TextBlock
                    x:Name="text"
                    FontSize="{DynamicResource ContentFontSize}">
                    <Run Text="{Binding Сonsumption, StringFormat=N2}"/>
                    <LineBreak/>
                    <Run Text="⛖" FontSize="{DynamicResource HeaderFontSize}"/>
                </TextBlock>
                <Grid.ToolTip>
                    <TextBlock>
                        <Run Text="{Binding LastElectricityReadings}"/>
                    </TextBlock>
                </Grid.ToolTip>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="PaymentItemDataTemplate" DataType="{x:Type model:MeterEvent}">
            <Grid MinWidth="{StaticResource minValueWidth}" Margin="1,2,1,0">
                <Border x:Name="border"
                        Margin="5,0,5,1"
                        VerticalAlignment="Bottom"
                        Background="Skyblue"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1"
                        Effect="{StaticResource dropShadowAccent}">
                    <Border.Height>
                        <MultiBinding Converter="{StaticResource ItemHeightValueConverter}">
                            <Binding Path="Сonsumption" />
                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}" />
                        </MultiBinding>
                    </Border.Height>
                </Border>
                <TextBlock
                    x:Name="text"
                    FontSize="{DynamicResource ContentFontSize}">
                    <Run Text="{Binding Сonsumption, StringFormat=N2}"/>
                    <LineBreak/>
                    <Run Text="💰" FontSize="{DynamicResource HeaderFontSize}"/>
                </TextBlock>
                <Grid.ToolTip>
                    <TextBlock>
                        <Run Text="{Binding LastElectricityReadings}"/>
                    </TextBlock>
                </Grid.ToolTip>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ControlItemDataTemplate" DataType="{x:Type model:MeterEvent}">
            <Grid MinWidth="{StaticResource minValueWidth}" Margin="1,2,1,0">
                <Border x:Name="border"
                        Margin="2,1,2,1"
                        VerticalAlignment="Bottom"
                        Background="Skyblue"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1"
                        Effect="{StaticResource dropShadowAccent}">
                </Border>
                <TextBlock
                    x:Name="text"
                    FontSize="{DynamicResource ContentFontSize}">
                    <Run Text="🕗" FontSize="{DynamicResource HeaderFontSize}"/>
                </TextBlock>
                <Grid.ToolTip>
                    <TextBlock>
                        <Run Text="{Binding LastElectricityReadings}"/>
                    </TextBlock>
                </Grid.ToolTip>
            </Grid>
        </DataTemplate>

        <Style x:Key="valuesItems" TargetType="{x:Type ItemsControl}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderBrush="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" BorderThickness="1,1,1,1">
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding EventType}" Value="{x:Static model:MeterEventType.Payment}">
                    <Setter Property="ItemTemplate" Value="{StaticResource PaymentItemDataTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EventType}" Value="{x:Static model:MeterEventType.Change}">
                    <Setter Property="ItemTemplate" Value="{StaticResource ChangeItemDataTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EventType}" Value="{x:Static model:MeterEventType.Control}">
                    <Setter Property="ItemTemplate" Value="{StaticResource ControlItemDataTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="periodItems" TargetType="{x:Type ItemsControl}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid MinWidth="{StaticResource minValueWidth}">
                            <Border
                                Width="2"
                                Height="4"
                                VerticalAlignment="Top"
                                BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                                BorderThickness="1,0" />
                            <TextBlock
                                Margin="0,4,0,0"
                                Text="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>        
        
        <Style TargetType="{x:Type ScrollViewer}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Visible" />
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition SharedSizeGroup="r1" />
                                <RowDefinition
                                    Height="Auto"
                                    MinHeight="25"
                                    SharedSizeGroup="r2" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1" />

                            <TextBlock
                                Grid.Row="0" TextAlignment="Center"
                                Text="Потребление,&#x0a;кВт∙ч" />
                            <TextBlock
                                Grid.Row="1"
                                FontSize="{DynamicResource ContentFontSize}"
                                Text="период" />
                            <ScrollBar
                                x:Name="PART_HorizontalScrollBar"
                                Grid.Row="2"
                                Grid.Column="1"
                                Maximum="{TemplateBinding ScrollableWidth}"
                                Orientation="Horizontal"
                                ViewportSize="{TemplateBinding ViewportWidth}"
                                Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                Value="{TemplateBinding HorizontalOffset}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition SharedSizeGroup="r1" />
                <RowDefinition
                    Height="Auto"
                    MinHeight="25"
                    SharedSizeGroup="r2" />
            </Grid.RowDefinitions>
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding MeterEvents, ElementName=root}"
                Style="{StaticResource valuesItems}"/>
            <ItemsControl
                Grid.Row="1"
                ItemsSource="{Binding Dates, ElementName=root}"
                Style="{StaticResource periodItems}" />
        </Grid>
    </ScrollViewer>

</UserControl>
